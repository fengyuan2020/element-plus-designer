{
  "__id__": "popover",
  "name": "弹出框",
  "desc": "## 基础用法",
  "tag": "el-popover",
  "tagIcon": "popover",
  "layouts": [
    "rawItem"
  ],
  "document": "https://element-plus.org/zh-CN/component/popover.html",
  "attributes": {
    "trigger": {
      "label": "触发方式",
      "title": "触发方式",
      "types": [
        {
          "name": "enum",
          "tag": "el-select",
          "options": [
            {
              "label": "click",
              "value": "click"
            },
            {
              "label": "focus",
              "value": "focus"
            },
            {
              "label": "hover",
              "value": "hover"
            },
            {
              "label": "contextmenu",
              "value": "contextmenu"
            }
          ]
        }
      ],
      "default": "hover"
    },
    "trigger-keys": {
      "label": "当鼠标点击或者聚焦在触发元素上时",
      "title": "当鼠标点击或者聚焦在触发元素上时， 可以定义一组键盘按键并且通过它们来控制 Popover 的显示",
      "types": [
        {
          "name": "array",
          "tag": "array-editor"
        }
      ],
      "default": "['Enter','Space']",
      "version": "2.9.8"
    },
    "title": {
      "label": "标题",
      "title": "标题",
      "types": [
        {
          "name": "string",
          "tag": "el-input",
          "props": {
            "clearable": true
          }
        }
      ]
    },
    "effect": {
      "label": "主题",
      "title": "Tooltip 主题，Element Plus 内置了 <code>dark</code> / <code>light</code> 两种主题",
      "types": [
        {
          "name": "enum",
          "tag": "el-radio-group",
          "config": {
            "optionType": "button"
          },
          "options": [
            {
              "label": "dark",
              "value": "dark"
            },
            {
              "label": "light",
              "value": "light"
            }
          ]
        },
        {
          "name": "string",
          "tag": "el-input"
        }
      ],
      "default": "light"
    },
    "content": {
      "label": "显示内容",
      "title": "显示的内容，也可以通过写入默认 <code>slot</code> 修改显示内容",
      "types": [
        {
          "name": "string",
          "tag": "el-input",
          "props": {
            "clearable": true
          }
        }
      ]
    },
    "width": {
      "label": "宽度",
      "title": "宽度",
      "types": [
        {
          "name": "stringNumber",
          "tag": "string-number-input"
        }
      ],
      "default": 150
    },
    "placement": {
      "label": "出现位置",
      "title": "出现位置",
      "types": [
        {
          "name": "enum",
          "tag": "el-select",
          "options": [
            {
              "label": "top",
              "value": "top"
            },
            {
              "label": "top-start",
              "value": "top-start"
            },
            {
              "label": "top-end",
              "value": "top-end"
            },
            {
              "label": "bottom",
              "value": "bottom"
            },
            {
              "label": "bottom-start",
              "value": "bottom-start"
            },
            {
              "label": "bottom-end",
              "value": "bottom-end"
            },
            {
              "label": "left",
              "value": "left"
            },
            {
              "label": "left-start",
              "value": "left-start"
            },
            {
              "label": "left-end",
              "value": "left-end"
            },
            {
              "label": "right",
              "value": "right"
            },
            {
              "label": "right-start",
              "value": "right-start"
            },
            {
              "label": "right-end",
              "value": "right-end"
            }
          ]
        }
      ],
      "default": "bottom"
    },
    "disabled": {
      "label": "禁用",
      "title": "Popover 是否可用",
      "types": [
        {
          "name": "boolean",
          "tag": "el-switch"
        }
      ],
      "default": false
    },
    "offset": {
      "label": "偏移量",
      "title": "浮层偏移量, <code>Popover</code> 是在 <code>Tooltip</code>,基础上开发的， <code>Popover</code>的 offset 是 <code>undefined</code>, 但<code>Tooltip</code> 的 offset 是12",
      "types": [
        {
          "name": "number",
          "tag": "el-input-number"
        }
      ]
    },
    "transition": {
      "label": "渐变动画",
      "title": "定义渐变动画，默认是 el-fade-in-linear",
      "types": [
        {
          "name": "string",
          "tag": "el-input",
          "props": {
            "clearable": true
          }
        }
      ]
    },
    "show-arrow": {
      "label": "显示 Tooltip 箭头",
      "title": "是否显示 Tooltip 箭头， 欲了解更多信息，请参考 <a href=\"https://github.com/element-plus/element-plus/tree/dev/packages/components/popper\">ElPopper</a>",
      "types": [
        {
          "name": "boolean",
          "tag": "el-switch"
        }
      ],
      "default": true
    },
    "popper-options": {
      "label": "popper.js 的参数",
      "title": "<a href=\"https://popper.js.org/docs/v2/\">popper.js</a> 的参数",
      "types": [
        {
          "name": "object",
          "tag": "object-editor"
        }
      ],
      "default": {
        "modifiers": [
          {
            "name": "computeStyles",
            "options": {
              "gpuAcceleration": false
            }
          }
        ]
      },
      "keep": true
    },
    "popper-class": {
      "label": "popper 添加类名",
      "title": "为 popper 添加类名",
      "types": [
        {
          "name": "string",
          "tag": "el-input",
          "props": {
            "clearable": true
          }
        }
      ]
    },
    "popper-style": {
      "label": "为 popper 自定义样式",
      "title": "为 popper 自定义样式",
      "types": [
        {
          "name": "string",
          "tag": "el-input",
          "props": {
            "clearable": true
          }
        },
        {
          "name": "object",
          "tag": "style-editor"
        }
      ]
    },
    "show-after": {
      "label": "延迟出现",
      "title": "在触发后多久显示内容，单位毫秒",
      "types": [
        {
          "name": "number",
          "tag": "el-input-number"
        }
      ],
      "default": 0
    },
    "hide-after": {
      "label": "延迟关闭",
      "title": "延迟关闭，单位毫秒",
      "types": [
        {
          "name": "number",
          "tag": "el-input-number"
        }
      ],
      "default": 200
    },
    "auto-close": {
      "label": "自动隐藏延时",
      "title": "tooltip 出现后自动隐藏延时，单位毫秒",
      "types": [
        {
          "name": "number",
          "tag": "el-input-number"
        }
      ],
      "default": 0
    },
    "tabindex": {
      "label": "tabindex",
      "title": "Popover 组件的 <a href=\"https://developer.mozilla.org/zh-CN/docs/Web/HTML/Global_attributes/tabindex\">tabindex</a>",
      "types": [
        {
          "name": "stringNumber",
          "tag": "string-number-input"
        }
      ],
      "default": 0
    },
    "teleported": {
      "label": "teleported",
      "title": "是否将 popover 的下拉列表插入至 body 元素",
      "types": [
        {
          "name": "boolean",
          "tag": "el-switch"
        }
      ],
      "default": true
    },
    "append-to": {
      "label": "指示 Tooltip 的内容将附加在哪一个网页元素上",
      "title": "指示 Tooltip 的内容将附加在哪一个网页元素上",
      "types": [
        {
          "name": "string",
          "tag": "el-input"
        }
      ],
      "default": "body",
      "version": "2.8.4"
    },
    "persistent": {
      "label": "persistent",
      "title": "当 popover 组件长时间不触发且 <code>persistent</code> 属性设置为 <code>false</code> 时, popover 将会被删除",
      "types": [
        {
          "name": "boolean",
          "tag": "el-switch"
        }
      ],
      "default": true
    },
    "virtual-triggering": {
      "label": "启用虚拟触发器",
      "title": "是否启用虚拟触发器",
      "types": [
        {
          "name": "boolean",
          "tag": "el-switch"
        }
      ]
    },
    "virtual-ref": {
      "label": "代表 tooltip 所要附加的参照元素",
      "title": "代表 tooltip 所要附加的参照元素",
      "types": [
        {
          "name": "HTMLElement"
        }
      ]
    }
  },
  "slots": [
    {
      "name": "default",
      "title": "Popover 内嵌 HTML 文本"
    },
    {
      "name": "reference",
      "title": "触发 Popover 显示的 HTML 元素"
    }
  ],
  "events": [
    {
      "name": "show",
      "title": "显示时触发",
      "type": "function",
      "details": "() => void"
    },
    {
      "name": "before-enter",
      "title": "显示动画播放前触发",
      "type": "function",
      "details": "() => void"
    },
    {
      "name": "after-enter",
      "title": "显示动画播放完毕后触发",
      "type": "function",
      "details": "() => void"
    },
    {
      "name": "hide",
      "title": "隐藏时触发",
      "type": "function",
      "details": "() => void"
    },
    {
      "name": "before-leave",
      "title": "隐藏动画播放前触发",
      "type": "function",
      "details": "() => void"
    },
    {
      "name": "after-leave",
      "title": "隐藏动画播放完毕后触发",
      "type": "function",
      "details": "() => void"
    }
  ],
  "exposes": [
    {
      "name": "hide",
      "title": "隐藏 popover",
      "type": "function",
      "details": "() => void"
    }
  ]
}