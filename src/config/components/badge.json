{
  "__id__": "badge",
  "name": "徽章",
  "tag": "el-badge",
  "tagIcon": "badge",
  "layouts": [
    "containerItem"
  ],
  "document": "https://element-plus.gitee.io/zh-CN/component/badge.html",
  "attributes": {
    "value": {
      "label": "显示值",
      "title": "显示值",
      "types": [
        {
          "name": "stringNumber",
          "tag": "string-number-input"
        }
      ]
    },
    "max": {
      "label": "最大值",
      "title": "最大值，超过最大值会显示 {max}+。 只有当 value 是数字类型时才会工作。",
      "types": [
        {
          "name": "number",
          "tag": "el-input-number"
        }
      ],
      "default": 99
    },
    "is-dot": {
      "label": "显示小圆点",
      "title": "是否显示小圆点。",
      "types": [
        {
          "name": "boolean",
          "tag": "el-switch"
        }
      ],
      "default": false
    },
    "hidden": {
      "label": "隐藏 Badge",
      "title": "是否隐藏 Badge。",
      "types": [
        {
          "name": "boolean",
          "tag": "el-switch"
        }
      ],
      "default": false
    },
    "type": {
      "label": "类型",
      "title": "badge 类型。",
      "types": [
        {
          "name": "enum",
          "tag": "el-select",
          "options": [
            {
              "label": "primary",
              "value": "primary"
            },
            {
              "label": "success",
              "value": "success"
            },
            {
              "label": "warning",
              "value": "warning"
            },
            {
              "label": "danger",
              "value": "danger"
            },
            {
              "label": "info",
              "value": "info"
            }
          ]
        }
      ],
      "default": "danger"
    },
    "show-zero": {
      "title": "值为零时是否显示 Badge",
      "types": [
        {
          "name": "boolean",
          "tag": "el-switch"
        }
      ],
      "default": true,
      "version": "2.6.0"
    },
    "color": {
      "title": "背景色",
      "types": [
        {
          "name": "string",
          "tag": "el-input"
        }
      ],
      "version": "2.6.3"
    },
    "offset": {
      "label": "偏移量",
      "title": "badge 的偏移量",
      "types": [
        {
          "name": "[ `number` , `number` ]",
          "tag": ""
        }
      ],
      "version": "2.7.0"
    },
    "badge-style": {
      "title": "自定义 badge 样式",
      "types": [
        {
          "name": "object",
          "tag": "object-editor"
        }
      ],
      "version": "2.7.1"
    },
    "badge-class": {
      "title": "自定义 badge 类名",
      "types": [
        {
          "name": "string",
          "tag": "el-input"
        }
      ],
      "version": "2.7.1"
    }
  },
  "slots": [
    {
      "name": "default",
      "title": "自定义默认内容"
    }
  ],
  "desc": "按钮和图标上的数字或状态标记。"
}