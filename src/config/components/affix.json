{
  "__id__": "affix",
  "name": "固钉",
  "desc": "将页面元素固定在特定可视区域。",
  "tag": "el-affix",
  "tagIcon": "affix",
  "layouts": [
    "rawItem"
  ],
  "document": "https://element-plus.org/zh-CN/component/affix.html",
  "attributes": {
    "offset": {
      "label": "偏移距离",
      "title": "偏移距离",
      "types": [
        {
          "name": "number",
          "tag": "el-input-number"
        }
      ],
      "default": 0
    },
    "position": {
      "label": "位置",
      "title": "固钉位置",
      "types": [
        {
          "name": "enum",
          "tag": "el-radio-group",
          "config": {
            "optionType": "button"
          },
          "options": [
            {
              "label": "top",
              "value": "top"
            },
            {
              "label": "bottom",
              "value": "bottom"
            }
          ]
        }
      ],
      "default": "top"
    },
    "target": {
      "label": "指定容器",
      "title": "指定容器（CSS 选择器）",
      "types": [
        {
          "name": "string",
          "tag": "el-input",
          "props": {
            "clearable": true
          }
        }
      ]
    },
    "z-index": {
      "label": "z-index",
      "title": "<code>z-index</code>",
      "types": [
        {
          "name": "number",
          "tag": "el-input-number"
        }
      ],
      "default": 100
    }
  },
  "slots": [
    {
      "name": "default",
      "title": "自定义默认内容"
    }
  ],
  "events": [
    {
      "name": "change",
      "title": "固钉状态改变时触发的事件",
      "type": "function",
      "details": "(fixed: boolean) => void"
    },
    {
      "name": "scroll",
      "title": "滚动时触发的事件",
      "type": "function",
      "details": "(value: { scrollTop: number, fixed: boolean }) => void"
    }
  ],
  "exposes": [
    {
      "name": "update",
      "title": "手动更新固钉状态",
      "type": "function",
      "details": "() => void"
    },
    {
      "name": "updateRoot",
      "title": "手动更新根元素的盒模型信息",
      "type": "function",
      "details": "() => void"
    }
  ]
}