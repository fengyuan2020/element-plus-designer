{
  "__id__": "card",
  "name": "卡片",
  "desc": "将信息聚合在卡片容器中展示。",
  "tag": "el-card",
  "tagIcon": "card",
  "layouts": [
    "containerItem"
  ],
  "document": "https://element-plus.org/zh-CN/component/card.html",
  "attributes": {
    "header": {
      "label": "标题",
      "title": "卡片的标题 你既可以通过设置 header 来修改标题，也可以通过 <code>slot#header</code> 传入 DOM 节点",
      "types": [
        {
          "name": "string",
          "tag": "el-input",
          "props": {
            "clearable": true
          }
        }
      ]
    },
    "footer": {
      "label": "页脚",
      "title": "卡片页脚。 你既可以通过设置 footer 来修改卡片底部内容，也可以通过 <code>slot#footer</code> 传入 DOM 节点",
      "types": [
        {
          "name": "string",
          "tag": "el-input"
        }
      ],
      "version": "2.4.3"
    },
    "body-style": {
      "label": "body 的 CSS 样式",
      "title": "body 的 CSS 样式",
      "types": [
        {
          "name": "object",
          "tag": "style-editor"
        }
      ]
    },
    "header-class": {
      "label": "header 的自定义类名",
      "title": "card header 的自定义类名",
      "types": [
        {
          "name": "string",
          "tag": "el-input"
        }
      ],
      "version": "2.9.8"
    },
    "body-class": {
      "label": "body 的自定义类名",
      "title": "body 的自定义类名",
      "types": [
        {
          "name": "string",
          "tag": "el-input",
          "props": {
            "clearable": true
          }
        }
      ],
      "version": "2.3.10"
    },
    "footer-class": {
      "label": "footer 的自定义类名",
      "title": "footer 的自定义类名",
      "types": [
        {
          "name": "string",
          "tag": "el-input"
        }
      ],
      "version": "2.9.8"
    },
    "shadow": {
      "label": "阴影显示时机",
      "title": "卡片阴影显示时机",
      "types": [
        {
          "name": "enum",
          "tag": "el-radio-group",
          "config": {
            "optionType": "button"
          },
          "options": [
            {
              "label": "always",
              "value": "always"
            },
            {
              "label": "never",
              "value": "never"
            },
            {
              "label": "hover",
              "value": "hover"
            }
          ]
        }
      ],
      "default": "always"
    }
  },
  "slots": [
    {
      "name": "default",
      "title": "自定义默认内容"
    },
    {
      "name": "header",
      "title": "卡片标题内容"
    },
    {
      "name": "footer",
      "title": "卡片页脚内容"
    }
  ]
}