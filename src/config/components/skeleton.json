{
  "__id__": "skeleton",
  "name": "骨架",
  "desc": "在需要等待加载内容的位置设置一个骨架屏，某些场景下比 Loading 的视觉效果更好。",
  "tag": "el-skeleton",
  "tagIcon": "skeleton",
  "layouts": [
    "rawItem"
  ],
  "document": "https://element-plus.org/zh-CN/component/skeleton.html",
  "attributes": {
    "animated": {
      "label": "使用动画",
      "title": "是否使用动画",
      "types": [
        {
          "name": "boolean",
          "tag": "el-switch"
        }
      ],
      "default": false
    },
    "count": {
      "label": "渲染多少个 template",
      "title": "渲染多少个 template, 建议使用尽可能小的数字",
      "types": [
        {
          "name": "number",
          "tag": "el-input-number"
        }
      ],
      "default": 1
    },
    "loading": {
      "label": "DOM 结构",
      "title": "是否显示加载结束后的 DOM 结构",
      "types": [
        {
          "name": "boolean",
          "tag": "el-switch"
        }
      ],
      "default": false
    },
    "rows": {
      "label": "段落数量",
      "title": "骨架屏段落数量",
      "types": [
        {
          "name": "number",
          "tag": "el-input-number"
        }
      ],
      "default": 3
    },
    "throttle": {
      "label": "渲染延迟",
      "title": "渲染延迟（以毫秒为单位） 数字代表延迟显示, 也可以设置为延迟隐藏, 例如 <code>{ leading: 500, trailing: 500 }</code> 当需要控制初始加载值时，您可以设置 <code>{ initVal: true }</code>",
      "types": [
        {
          "name": "number",
          "tag": "el-input-number"
        },
        {
          "name": "object",
          "tag": "object-editor"
        }
      ],
      "default": 0
    }
  },
  "slots": [
    {
      "name": "default",
      "title": "真正渲染的DOM",
      "type": "object",
      "details": "$attrs"
    },
    {
      "name": "template",
      "title": "渲染 skeleton 模板的内容",
      "type": "object",
      "details": "{ key: number }"
    }
  ]
}